<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".login_02.VerifyPhoneActivity">



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_backarrow_signup_enter_name_continue_id"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back_arrow_page"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="346.5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_logo_phone_id"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/circle_image_eva_olson"
        android:layout_marginTop="80dp"
        android:layout_marginStart="134dp"
        android:layout_marginEnd="131dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_phone_name_id"/>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_phone_name_id"
        android:layout_width="300dp"
        android:layout_height="28dp"
        android:text="Enter your phone num"
        android:fontFamily="@font/sans_medium"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo_phone_id"
        app:layout_constraintBottom_toTopOf="@+id/editText_phone_id" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_phone_id"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:hint="0 1 7 1 1"
        android:inputType="phone"
        android:textColor="@color/text_color"
        android:padding="15dp"
        android:background="@drawable/bg_edittext_button_color"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_phone_name_id"
        app:layout_constraintBottom_toTopOf="@+id/button_phone_id"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_phone_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_goneMarginStart="32dp"
        app:layout_goneMarginEnd="32dp"
        android:padding="16dp"
        app:cornerRadius="12dp"

        app:backgroundTint="@color/color_bg_button_onboarding"
        android:text="@string/text_continue"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/color_white"
        android:fontFamily="@font/sans_medium"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_phone_id" />



</androidx.constraintlayout.widget.ConstraintLayout>