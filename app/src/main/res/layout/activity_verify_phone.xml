<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.VerifyPhoneActivity">



    <ImageView
        android:id="@+id/image_backarrow_signup_enter_name_continue_id"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/back_arrow_page"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="346.5dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_logo_phone_id"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/circle_image_eva_olson"
        android:layout_marginTop="80dp"
        android:layout_marginStart="134dp"
        android:layout_marginEnd="131dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_phone_name_id"/>



    <TextView
        android:id="@+id/text_phone_name_id"
        android:layout_width="300dp"
        android:layout_height="28dp"
        android:text="Enter your phone num"
        android:fontFamily="@font/sans_medium"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo_phone_id"
        app:layout_constraintBottom_toTopOf="@+id/editText_phone_id" />


    <EditText
        android:id="@+id/editText_phone_id"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:hint="0 1 7 1 1"
        android:inputType="phone"
        android:textColor="@color/text_color"
        android:padding="15dp"
        android:background="@drawable/bg_edittext_button_color"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_phone_name_id"
        app:layout_constraintBottom_toTopOf="@+id/button_phone_id"/>

    <Button
        android:id="@+id/button_phone_id"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_rounded_button"
        android:text="Continue"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/sans_medium"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_phone_id" />












</androidx.constraintlayout.widget.ConstraintLayout>