<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".statasactivity_stats_01.StatasActivity">


    <include
        android:id="@+id/includelayout_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/custom_statas_toolbar"
        android:layout_marginBottom="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textactivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"

        android:layout_marginTop="64dp"
        android:text="Activity"
        android:textColor="@color/color_black"
        android:textSize="24sp"
        android:fontFamily="@font/sans_medium"
        android:gravity="center"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/constrantcircle">



    </androidx.appcompat.widget.AppCompatTextView>





    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrantcircle"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/constraintporgress"
        app:layout_constraintTop_toBottomOf="@+id/textactivity">



        <com.vaibhavlakhera.circularprogressview.CircularProgressView
            android:id="@+id/progressshowimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"

            android:padding="30dp"
            app:animate="true"
            app:animateDuration="600"
            app:fillColor="@color/color_white"

            app:progress="450"
            app:progressColor="#FFDC49"
            app:progressRoundCap="true"
            app:progressTextColor="@color/color_black"
            app:progressTextEnabled="true"
            app:progressTextSize="26sp"
            app:progressTextType="progress"
            app:startAngle="270"
            app:total="450"
            app:totalColor="@color/color_total_progress"

            app:layout_constraintRight_toLeftOf="@+id/progressshowfats"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"

            android:text="Call"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:fontFamily="@font/sans_regular"


            app:layout_constraintStart_toStartOf="@+id/progressshowimage"
            app:layout_constraintEnd_toEndOf="@+id/progressshowimage"
            app:layout_constraintTop_toTopOf="@+id/progressshowimage"
            app:layout_constraintBottom_toBottomOf="@+id/progressshowimage" />


        <com.vaibhavlakhera.circularprogressview.CircularProgressView
            android:id="@+id/progressshowfats"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"

            android:padding="30dp"
            app:animate="true"
            app:animateDuration="600"

            app:progress="300"
            app:progressColor="#5DD9DE"
            app:progressRoundCap="true"
            app:progressTextColor="@color/color_black"
            app:progressTextEnabled="true"
            app:progressTextSize="26sp"
            app:progressTextType="progress"
            app:startAngle="270"
            app:total="600"
            app:totalColor="@color/color_total_progress"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/progressshowimage"
            app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"

            android:text="Fats"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:fontFamily="@font/sans_regular"


            app:layout_constraintStart_toStartOf="@+id/progressshowfats"
            app:layout_constraintEnd_toEndOf="@+id/progressshowfats"
            app:layout_constraintTop_toTopOf="@+id/progressshowfats"
            app:layout_constraintBottom_toBottomOf="@+id/progressshowfats" />

    </androidx.constraintlayout.widget.ConstraintLayout>






<!--    second step in layout..  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintporgress"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_marginBottom="24dp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrantcircle"
        app:layout_constraintBottom_toTopOf="@+id/constraintlayoutcalendar"
        >


        <com.skydoves.progressview.ProgressView
            android:id="@+id/progressViewfast"
            android:layout_width="80dp"
            android:layout_height="250dp"
            android:layout_marginStart="24dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/progressViewsecond"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:progressView_colorBackground="#5DD9DE"
            app:progressView_colorProgress="#39C9CE"
            app:progressView_labelColorOuter="#000"

            app:progressView_highlightAlpha="0.8"
            app:progressView_highlightWidth="100dp"

            app:progressView_labelSize="150sp"
            app:progressView_labelSpace="50dp"
            app:layout_constraintCircleRadius="500dp"


            app:progressView_orientation="vertical"
            app:progressView_progress="45"
            app:progressView_radius="30dp"


           />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginStart="48dp"


            android:text="500"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/sans_medium"

            app:layout_constraintRight_toLeftOf="@+id/onhundred"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/four"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="50dp"
            android:textSize="16sp"
            android:text="450"
            android:gravity="center"
            android:fontFamily="@font/sans_medium"
            android:textColor="@color/white"

            app:layout_constraintRight_toLeftOf="@+id/eighty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/two"
            app:layout_constraintTop_toBottomOf="@+id/five" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="50dp"

            android:textSize="16sp"
            android:text="250"
            android:gravity="center"
            android:fontFamily="@font/sans_medium"
            android:textColor="@color/white"


            app:layout_constraintRight_toLeftOf="@+id/sixty"
            app:layout_constraintTop_toBottomOf="@+id/four"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/progressViewfast"/>





<!--        second stepp... -->
        <com.skydoves.progressview.ProgressView
            android:id="@+id/progressViewsecond"
            android:layout_width="80dp"
            android:layout_height="250dp"


            app:progressView_colorBackground="#FF9DC0"
            app:progressView_colorProgress="#ffb1cd"
            app:progressView_labelColorOuter="#000"
            app:progressView_orientation="vertical"

            app:progressView_labelSpace="50dp"
            app:progressView_progress="60"
            app:progressView_radius="30dp"

            app:layout_constraintRight_toLeftOf="@+id/progressViewthird"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/progressViewfast"
            app:layout_constraintBottom_toBottomOf="parent"/>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/onhundred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"


            android:textSize="16sp"
            android:fontFamily="@font/sans_medium"
            android:textColor="@color/white"
            android:text="100"
            android:gravity="center"

            app:layout_constraintRight_toLeftOf="@+id/hundredtwenty"
            app:layout_constraintBottom_toTopOf="@+id/eighty"
            app:layout_constraintLeft_toRightOf="@+id/five"
            app:layout_constraintTop_toTopOf="parent"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/eighty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"


            android:textSize="16sp"
            android:fontFamily="@font/sans_medium"
            android:textColor="@color/white"
            android:text="80"
            android:gravity="center"

            app:layout_constraintRight_toLeftOf="@+id/ninety"
            app:layout_constraintBottom_toTopOf="@+id/sixty"
            app:layout_constraintLeft_toRightOf="@+id/four"
            app:layout_constraintTop_toBottomOf="@+id/onhundred" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sixty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"



            android:textSize="16sp"
            android:fontFamily="@font/sans_medium"
            android:textColor="@color/white"
            android:text="60"
            android:gravity="center"


            app:layout_constraintRight_toLeftOf="@+id/seventy"
            app:layout_constraintLeft_toRightOf="@+id/two"
            app:layout_constraintTop_toBottomOf="@+id/eighty"
            app:layout_constraintBottom_toBottomOf="@+id/progressViewsecond" />




    <!--        third step-->

        <com.skydoves.progressview.ProgressView
            android:id="@+id/progressViewthird"
            android:layout_width="80dp"
            android:layout_height="250dp"
            android:layout_marginEnd="24dp"

            android:layout_marginLeft="24dp"


            app:progressView_colorBackground="#FFDC49"
            app:progressView_colorProgress="#F8CD04"
            app:progressView_labelColorOuter="#000"
            app:progressView_orientation="vertical"

            app:progressView_labelSpace="40dp"
            app:progressView_progress="50"
            app:progressView_radius="30dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/progressViewsecond"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hundredtwenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="48dp"

            android:textSize="16sp"
            android:fontFamily="@font/sans_medium"
            android:textColor="@color/white"
            android:text="120"
            android:gravity="center"

            app:layout_constraintBottom_toTopOf="@+id/ninety"
            app:layout_constraintLeft_toRightOf="@+id/onhundred"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ninety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"


            android:textSize="16sp"
            android:fontFamily="@font/sans_medium"
            android:textColor="@color/white"
            android:text="90"
            android:gravity="center"

            app:layout_constraintBottom_toTopOf="@+id/seventy"
            app:layout_constraintLeft_toRightOf="@+id/eighty"
            app:layout_constraintTop_toBottomOf="@+id/hundredtwenty"
            app:layout_constraintEnd_toEndOf="parent" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/seventy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"

            android:textSize="16sp"
            android:fontFamily="@font/sans_medium"
            android:textColor="@color/white"
            android:text="70"
            android:gravity="center"

            app:layout_constraintLeft_toRightOf="@+id/sixty"
            app:layout_constraintTop_toBottomOf="@+id/ninety"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/progressViewthird"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



<!--    setter to spinner and 2019 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayoutcalendar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/recyclercount"
        app:layout_constraintTop_toBottomOf="@+id/constraintporgress">


        <Spinner
            android:id="@+id/spinnerid"
            android:layout_width="160dp"
            android:layout_height="40dp"

            android:background="@drawable/bg_spinner"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/caldendarid" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/caldendarid"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_calendar"
            app:cornerRadius="8dp"

            android:text="2019"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/color_text_calendar"

            app:layout_constraintLeft_toRightOf="@+id/spinnerid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>



<!--    step no .. last initialize to count-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclercount"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"

        android:background="@drawable/bg_edittext_button_color"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayoutcalendar"/>







</androidx.constraintlayout.widget.ConstraintLayout>