<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_layout_id"
    tools:context=".MainActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/indicator_id"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="165dp"
        app:dotsColor="@color/color_white"
        app:dotsCornerRadius="8dp"
        app:dotsSize="12dp"
        app:dotsStrokeWidth="2dp"
        app:dotsSpacing="4dp"
        app:progressMode="true"
        app:selectedDotColor="@color/color_dot"
        app:stiffness="300"
        app:dotsStrokeColor="@color/color_black"
        app:dampingRatio="0.5"
        app:dotsWidthFactor="1.5"
        app:layout_constraintBottom_toBottomOf="@+id/viewPager_id"
        app:layout_constraintEnd_toEndOf="@id/viewPager_id"
        app:layout_constraintStart_toStartOf="@id/viewPager_id" />









</androidx.constraintlayout.widget.ConstraintLayout>