<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_layout_id"
    android:background="@color/color_white"
    tools:context=".MainActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/indicator_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/indicator_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:dotsColor="@color/color_dots"
        app:dotsCornerRadius="8dp"
        app:dotsSize="10dp"
        app:dotsStrokeWidth="2dp"
        app:dotsSpacing="4dp"
        app:progressMode="true"
        app:selectedDotColor="@color/color_selected_dot"
        app:stiffness="300"
        app:dotsStrokeColor="@color/color_black"
        app:dampingRatio="1"
        app:dotsWidthFactor="1"
        app:layout_constraintTop_toBottomOf="@+id/viewPager_id"
        app:layout_constraintBottom_toTopOf="@+id/button_get_started"
        app:layout_constraintEnd_toEndOf="@id/viewPager_id"
        app:layout_constraintStart_toStartOf="@id/viewPager_id" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_get_started"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"

        app:fontFamily="@font/sans_medium"
        app:backgroundTint="@color/color_bg_button_onboarding"
        android:padding="16dp"
        app:cornerRadius="12dp"
        android:text="@string/get_started"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:textSize="14sp"

        app:layout_constraintTop_toBottomOf="@+id/indicator_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>