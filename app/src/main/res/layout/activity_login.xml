<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_login_bg"
    tools:context=".login_02.LoginActivity">


    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/custom_toolbar_color_back"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_welcome_login_to_continue_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="72dp"
            app:fontFamily="@font/sans_medium"
            android:gravity="center"
            android:text="@string/welcome_login_continue"
            android:textColor="@color/color_white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/image_welcome_login_image_id" />



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_welcome_login_image_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome_login_image"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_welcome_login_to_continue_id"
        app:layout_constraintBottom_toTopOf="@+id/editText_enter_your_email_id"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_enter_your_email_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:padding="16dp"
        android:background="@drawable/bg_edittext_button_color"
        app:cornerRadius="20dp"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/color_white"
        android:hint="@string/enter_your_email"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="@font/sans_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_welcome_login_image_id"
        app:layout_constraintBottom_toTopOf="@+id/editText_enter_your_password_id"/>


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_enter_your_password_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:padding="16dp"
        android:background="@drawable/bg_edittext_button_color"
        android:inputType="textPassword"
        android:backgroundTint="@color/color_white"
        android:hint="@string/password"
        android:layout_marginTop="30dp"
        android:textSize="17sp"
        android:fontFamily="@font/sans_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_enter_your_email_id"
        app:layout_constraintBottom_toTopOf="@+id/button_login_id" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_login_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        android:backgroundTint="@color/color_white"
        app:cornerRadius="12dp"
        android:textSize="16sp"
        app:fontFamily="@font/sans_medium"
        android:textAllCaps="false"
        android:textColor="@color/color_black"
        android:text="@string/login"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textForgotPass_id"
        app:layout_constraintTop_toBottomOf="@+id/editText_enter_your_password_id" />
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textForgotPass_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="140dp"
        android:text="@string/forgot_password"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:textColor="@color/color_black"
        app:fontFamily="@font/sans_regular"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_login_id" />
</androidx.constraintlayout.widget.ConstraintLayout>