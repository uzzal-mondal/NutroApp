<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9B2F0"
    android:orientation="vertical"
    tools:context=".login.SuccessAcountActivity">


    <ImageView
        android:id="@+id/imageback_arrow_id"
        android:layout_width="20dp"
        android:layout_height="34dp"
        android:src="@drawable/back_arrow_page_white"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="350dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image_bg_id"
        android:layout_width="400dp"
        android:layout_height="440dp"
        android:background="@drawable/bg_signin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrant_signinaccount_id"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagebgMain_id"
            android:layout_width="306dp"
            android:layout_height="380dp"
            android:src="@drawable/signin_bg_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>




    <TextView
        android:id="@+id/text_account_id"
        android:layout_width="326dp"
        android:layout_height="43dp"
        android:fontFamily="@font/sans_medium"
        android:text="Is That Yours Account ?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editText_account_id"
        app:layout_constraintTop_toBottomOf="@id/constrant_signinaccount_id" />



    <EditText
        android:id="@+id/editText_account_id"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_edittext_button_color"
        android:padding="15dp"
        android:hint="androidev@com"
        android:inputType="textEmailAddress"
        android:textSize="17sp"
        android:fontFamily="@font/sans_regular"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_account_id"
        app:layout_constraintBottom_toTopOf="@+id/buttonContinue_id"/>


    <Button
        android:id="@+id/buttonContinue_id"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:background="@drawable/bg_rounded_button"
        android:text="Continue"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_signin_id"
        app:layout_constraintTop_toBottomOf="@+id/editText_account_id" />

    <TextView
        android:id="@+id/text_signin_id"
        android:layout_width="77dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sans_medium"
        android:text="sign in"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonContinue_id" />


</androidx.constraintlayout.widget.ConstraintLayout>