<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilelula.ProfileLulaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_profile_lula_long_id"
        android:layout_width="335dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/image_profile_lula_long_id">


        <ImageView
            android:id="@+id/image_profile_lola_long_id"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow_page"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/text_profile_lua_long_id" />

        <TextView
            android:id="@+id/text_profile_lua_long_id"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/lula_long"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:textColor="@color/color_black"
            android:fontFamily="@font/sans_medium"
            android:textAlignment="center"
            android:layout_marginLeft="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_profile_lola_long_id"
            app:layout_constraintRight_toLeftOf="@+id/image_bg_search_profile_lula_long_id" />


        <ImageView
            android:id="@+id/image_bg_search_profile_lula_long_id"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:src="@drawable/bg_search"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/text_profile_lua_long_id"
            app:layout_constraintRight_toLeftOf="@+id/text_profile_menu_id" />

        <TextView
            android:id="@+id/text_profile_menu_id"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:text="&#8942;"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_bg_search_profile_lula_long_id" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_profile_lula_long_id"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/image_circle_profile_long"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/color_white"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_profile_lula_long_id"
        app:layout_constraintBottom_toTopOf="@+id/constraint_all_button_id" />


    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/bg_add_id"
        android:background="@drawable/bg_circle_button"
        android:layout_marginTop="20dp"
        android:layout_marginStart="85dp"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/constraint_all_button_id"
        app:layout_constraintTop_toBottomOf="@+id/constraint_profile_lula_long_id"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_all_button_id"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_recipes_id"
        app:layout_constraintTop_toBottomOf="@+id/image_profile_lula_long_id">

        <Button
            android:id="@+id/button_all_id"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_rounded_button"
            android:text="All"
            android:textSize="15sp"
            android:fontFamily="@font/sans_medium"
            android:textColor="@color/color_white"
            android:textAlignment="center"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/button_sweets_id" />


        <Button
            android:id="@+id/button_sweets_id"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Sweets"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/color_or_text"
            android:fontFamily="@font/sans_medium"
            android:background="@drawable/bg_edittext_button_color"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            app:layout_constraintRight_toLeftOf="@+id/button_fruits_id"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/button_all_id"

            />


        <Button
            android:id="@+id/button_fruits_id"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="Fruits"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/color_or_text"
            android:fontFamily="@font/sans_medium"
            android:background="@drawable/bg_edittext_button_color"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toRightOf="@+id/button_sweets_id"
            app:layout_constraintRight_toLeftOf="@+id/button_veg_id"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <Button
            android:id="@+id/button_veg_id"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="Veg"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/color_or_text"
            android:fontFamily="@font/sans_medium"
            android:background="@drawable/bg_edittext_button_color"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toRightOf="@+id/button_fruits_id"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/text_recipes_id"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="250dp"
        android:fontFamily="@font/sans_medium"
        android:text="@string/recipes"
        android:textAllCaps="false"
        android:textColor="@color/color_black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/recycler_lula_long_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_all_button_id" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_lula_long_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_recipes_id">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>