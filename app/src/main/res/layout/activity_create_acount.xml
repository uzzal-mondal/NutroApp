<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".signup_01.CreateAcountActivity">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include
            android:id="@+id/customToolbar_select_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            layout="@layout/custom_toolbar_back"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>




    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/createtext_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:textSize="24sp"
        app:fontFamily="@font/sans_medium"
        android:textColor="@color/text_color"
        android:text="@string/create_your_account"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/circleSubImageCreateAccount_id" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleSubImageCreateAccount_id"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginStart="140.5dp"
        android:layout_marginEnd="136.5dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/image_circle_profile_long"
        app:civ_border_color="@color/border_color"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"
        app:layout_constraintTop_toBottomOf="@+id/createtext_id"
        app:layout_constraintBottom_toTopOf="@+id/buttonfb_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageCreate_add_id"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/bg_circle_button"
        android:padding="15dp"
        android:src="@drawable/bg_add_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/circleSubImageCreateAccount_id" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonfb_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="2dp"
        android:padding="16dp"
        app:fontFamily="@font/sans_medium"
        app:backgroundTint="@color/color_bg_fb"
        app:cornerRadius="12dp"
        android:text="@string/facebook"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/circleSubImageCreateAccount_id"
        app:layout_constraintBottom_toTopOf="@+id/or_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/or_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="4dp"
        app:fontFamily="@font/sans_medium"
        android:gravity="center"
        android:text="@string/or"
        android:textAllCaps="false"
        android:textColor="@color/color_or_text"
        android:textSize="16sp"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editTextName_id"
        app:layout_constraintTop_toBottomOf="@+id/buttonfb_id" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextName_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:hint="@string/lula_long"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:fontFamily="@font/sans_regular"
        android:background="@drawable/bg_edittext_button_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or_id"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmail_id"/>


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextEmail_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="androiddev@com"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:fontFamily="@font/sans_regular"
        android:background="@drawable/bg_edittext_button_color"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName_id"
        app:layout_constraintBottom_toTopOf="@+id/editTextPassword_id" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextPassword_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="15dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/password"
        android:drawableRight="@drawable/bg_visibility_off_on_create_account"
        android:inputType="textPassword"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:fontFamily="@font/sans_regular"
        android:background="@drawable/bg_edittext_button_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail_id"
        app:layout_constraintBottom_toTopOf="@+id/edittextconfirm_id" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittextconfirm_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:fontFamily="@font/sans_regular"
        android:background="@drawable/bg_edittext_button_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword_id"
        app:layout_constraintBottom_toTopOf="@+id/button_get_id" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_get_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="16dp"
        android:layout_marginBottom="4dp"
        app:backgroundTint="@color/background_tint"
        app:fontFamily="@font/sans_medium"
        app:cornerRadius="12dp"
        android:text="@string/get_started"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textagree_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextconfirm_id" />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textagree_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:fontFamily="@font/sans_medium"
        android:text="@string/text_condition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view_id"
        app:layout_constraintTop_toBottomOf="@+id/button_get_id" />

    <View
        android:id="@+id/view_id"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginStart="144dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="16dp"
        android:background="@color/color_black"
        app:layout_constraintTop_toBottomOf="@+id/textagree_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>

